page {
  background-color: #f6f6f6;
  box-sizing: border-box;
}

.discover-container {
  padding-top: 180rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

.header {
  background: #fff;
  padding: 30rpx 32rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
}

/* 覆盖 goods-list 可能的默认背景色 */
.goods-list-container {
  background-color: transparent !important;
}
:host {
  padding-bottom: 100rpx;
}

.page-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.tab-bar {
  height: 44px;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.tab-bar__placeholder {
  height: 44px;
}

.tab-bar__inner {
  --td-tabs-color: #999;
  --td-tabs-text-active-color: #fa4126;
}

.tab-bar__active {
  color: #fa4126 !important;
}

.t-tabs-track {
  background-color: #fa4126 !important;
}

.order-number {
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
}

.order-button {
  display: flex;
  justify-content: flex-end;
  padding: 16px;
  gap: 8px;
}

.t-empty-description {
  color: #999;
  font-size: 14px;
}

.retry-btn {
  margin-top: 16px;
}

.t-button {
  --td-button-default-color: #000;
  --td-button-primary-text-color: #fff;
  --td-button-primary-bg-color: #fa4126;
}

page {
  background-color: #f6f6f6;
  padding-bottom: env(safe-area-inset-bottom);
}

.container {
  padding: 24rpx;
}

/* 搜索头 */
.search-header {
  margin-bottom: 24rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  background: #f6f6f6; /* 遮挡下方滚动内容 */
  padding-bottom: 10rpx;
}

/* 状态提示 */
.loading-state, .empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 100rpx;
  color: #999;
}
.empty-text {
  margin-top: 20rpx;
  font-size: 28rpx;
}

/* --- 移植的卡片样式 --- */
.hotel-card {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.hotel-cover {
  width: 100%;
  height: 320rpx;
  display: block;
}

.hotel-info {
  padding: 24rpx;
}

.name-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.hotel-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 16rpx;
}

.score-badge {
  background: #fff8f0;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  color: #fa4126;
  font-size: 24rpx;
  font-weight: bold;
}

.tags-row {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 24rpx;
}

.divider {
  height: 1rpx;
  background: #f0f0f0;
  margin-bottom: 24rpx;
}

/* 房间列表 */
.room-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}
.room-item:last-child {
  margin-bottom: 0;
}

.room-thumb {
  width: 110rpx;
  height: 110rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background: #eee;
}

.room-detail {
  flex: 1;
}

.room-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
}

.room-info {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.room-price {
  color: #fa4126;
  font-weight: bold;
  margin-right: 16rpx;
  text-align: right;
}

.symbol { font-size: 22rpx; }
.num { font-size: 34rpx; }

/* 预订弹窗样式 */
.booking-popup {
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx 24rpx;
}
.popup-header {
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
  margin-bottom: 30rpx;
}
.popup-title {
  font-size: 32rpx;
  font-weight: bold;
}
.label {
  display: block;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
}
.date-range-pickers {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}
.picker {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 12rpx;
  text-align: center;
  font-size: 28rpx;
}
.picker-val { color: #333; font-weight: bold; }
.picker-placeholder { color: #999; }
.popup-footer {
  display: flex;
  gap: 20rpx;
}
.popup-footer t-button {
  flex: 1;
}
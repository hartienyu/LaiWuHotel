.container {
  padding: 12px;
}
.search-bar {
  display: flex;
  gap: 8px;
  margin-bottom: 12px;
}
.search-input {
  flex: 1;
  height: 32px;
  padding: 4px 8px;
  border: 1px solid #ddd;
  border-radius: 4px;
}
.search-btn, .clear-btn {
  height: 32px;
  padding: 0 10px;
}
.loading, .no-result {
  color: #888;
  text-align: center;
  margin-top: 20px;
}
.result-list {
  margin-top: 8px;
}
.result-item {
  display: flex;
  padding: 10px 0;
  border-bottom: 1px solid #f0f0f0;
}
.thumb {
  width: 72px;
  height: 56px;
  border-radius: 4px;
  margin-right: 10px;
}
.meta {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.name {
  font-size: 16px;
  font-weight: bold;
}
.address, .score {
  font-size: 12px;
  color: #666;
  margin-top: 4px;
}
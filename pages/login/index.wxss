.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}
.logo { width: 150rpx; height: 150rpx; margin-bottom: 40rpx; }
.tips { font-size: 28rpx; color: #666; margin-bottom: 80rpx; }
.login-btn { 
  width: 80% !important; 
  background-color: #07c160;
  color: #ffffff; 
  border-radius: 40rpx; 
  font-weight: bold;
  font-size: 32rpx;
}

.cancel-btn { 
  width: 80% !important; 
  background-color: #f2f2f2;
  color: #07c160;
  border-radius: 40rpx; 
  margin-top: 30rpx; 
  font-size: 32rpx;
  font-weight: bold;
}